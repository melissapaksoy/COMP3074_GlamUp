<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF3F8">

    <!-- HEADER -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ratings &amp; Reviews"
        android:textColor="#D81B60"
        android:textSize="22sp"
        android:textStyle="bold"
        android:padding="20dp"
        android:gravity="center"
        android:background="#FFFFFF"
        android:elevation="4dp" />

    <!-- SCROLLABLE CONTENT -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- SAMPLE EXISTING REVIEWS -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Client Reviews"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#D81B60"
                android:layout_marginBottom="12dp" />

            <!-- Review Card -->
            <TextView
                android:id="@+id/txtReviewSample"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="⭐️⭐️⭐️⭐️☆  Great service!"
                android:padding="12dp"
                android:background="@drawable/rounded_card"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/txtReviewSample2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="⭐️⭐️⭐️⭐️⭐️  Amazing experience, highly recommend!"
                android:padding="12dp"
                android:background="@drawable/rounded_card"
                android:layout_marginBottom="25dp"/>

            <!-- ADD NEW REVIEW -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Write a Review"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#D81B60"
                android:layout_marginBottom="12dp" />

            <RatingBar
                android:id="@+id/ratingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:stepSize="1"
                android:layout_marginBottom="16dp" />

            <EditText
                android:id="@+id/edtReview"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:hint="Write your review here..."
                android:background="@drawable/input_box"
                android:padding="16dp"
                android:gravity="top"
                android:layout_marginBottom="16dp" />

            <Button
                android:id="@+id/btnAddReview"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Submit Review"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:backgroundTint="#D81B60"
                android:layout_marginBottom="20dp" />

        </LinearLayout>
    </ScrollView>

    <!-- FOOTER NAVIGATION -->
    <include
        android:id="@+id/footer"
        layout="@layout/footer_client" />

</LinearLayout>
