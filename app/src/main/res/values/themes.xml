<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.GlamUp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- main brand colors -->
        <item name="colorPrimary">@color/glam_pink</item>
        <item name="colorPrimaryVariant">@color/glam_pink_dark</item>
        <item name="colorOnPrimary">@android:color/white</item>

        <!-- Secondary brand color (used for floating action buttons, selection controls, etc.) -->
        <item name="colorSecondary">@color/glam_pink</item>
        <item name="colorSecondaryVariant">@color/glam_pink_dark</item>
        <item name="colorOnSecondary">@android:color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- If you are trying to style a DatePicker specifically, do it like this: -->
        <item name="materialCalendarTheme">@style/CustomDatePicker</item>
    </style>

    <!-- Custom Date Picker Style (Optional) -->
    <style name="CustomDatePicker" parent="@style/ThemeOverlay.MaterialComponents.MaterialCalendar">
        <!-- This overrides the selection color specifically for the calendar -->
        <item name="colorPrimary">@color/glam_pink</item>
    </style>
</resources>
