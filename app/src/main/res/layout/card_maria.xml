<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_maria"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_card_xml"
    android:padding="12dp"
    android:orientation="horizontal"
    android:layout_marginBottom="12dp"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/imgMaria"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/maria_rodriguez"
        android:scaleType="centerCrop"
        android:layout_marginEnd="12dp"
        android:background="@drawable/round_profile_bg" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Maria Rodriguez"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#222" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nail_artist_manicurist"
            android:textColor="#444" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="From $45"
            android:textColor="#444" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="â˜… 4.8"
        android:textColor="#222"
        android:layout_marginEnd="12dp" />

    <Button
        android:id="@+id/btnBook2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BOOK"
        android:textSize="12sp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:background="@drawable/rounded_card_xml" />
</LinearLayout>
