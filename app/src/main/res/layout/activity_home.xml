<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- MAIN SCROLLABLE CONTENT -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FF1493"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- LOGO -->
            <TextView
                android:id="@+id/tvLogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GlamUp!"
                android:textColor="@android:color/white"
                android:textSize="48sp"
                android:fontFamily="cursive"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="4dp" />

            <!-- TAGLINE -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Find Your Sparkle"
                android:textColor="#FFE6F2"
                android:textSize="14sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp" />

            <!-- Search Bar -->
            <EditText
                android:id="@+id/searchBox"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Search by service or location"
                android:padding="12dp"
                android:background="@drawable/bg_white_card"
                android:drawableStart="@android:drawable/ic_menu_search"
                android:layout_marginBottom="14dp"/>

            <!-- FILTER ROW 1: Service + Price -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp">

                <Spinner
                    android:id="@+id/spinnerService"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_white_card"
                    android:entries="@array/service_filter_options"/>

                <Spinner
                    android:id="@+id/spinnerPrice"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/bg_white_card"
                    android:entries="@array/price_sort_options"/>
            </LinearLayout>

            <!-- FILTER ROW 2: Rating + Availability -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <Spinner
                    android:id="@+id/spinnerRating"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_white_card"
                    android:entries="@array/rating_filter_options"/>

                <Spinner
                    android:id="@+id/spinnerAvailability"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/bg_white_card"
                    android:entries="@array/availability_filter_options"/>
            </LinearLayout>

            <!-- HEADER -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Beauty Professionals"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="124 results"
                    android:textColor="@android:color/white"/>
            </LinearLayout>

            <!-- ONLY THE CARDS GO IN THIS CONTAINER -->
            <LinearLayout
                android:id="@+id/cardsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- SARAH -->
                <include layout="@layout/card_sarah" />

                <!-- MARIA -->
                <include layout="@layout/card_maria" />

                <!-- EMILY -->
                <include layout="@layout/card_emily_chen" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- FOOTER NAV (same as your friend) -->
    <include
        android:id="@+id/footer"
        layout="@layout/footer_client" />

</LinearLayout>
