<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- MAIN SCROLLABLE CONTENT -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFFFF"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GlamUp!"
                android:textStyle="bold"
                android:textSize="26sp"
                android:textColor="#111827"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp" />

            <EditText
                android:id="@+id/searchBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Search by service or location"
                android:drawableStart="@android:drawable/ic_menu_search"
                android:padding="12dp"
                android:layout_marginBottom="12dp" />

            <!-- Row 1: Service + Price -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="8dp">

                <Spinner
                    android:id="@+id/spinnerService"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:entries="@array/service_filter_options"
                    android:spinnerMode="dropdown"
                    android:padding="6dp" />

                <Spinner
                    android:id="@+id/spinnerPrice"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:entries="@array/price_sort_options"
                    android:spinnerMode="dropdown"
                    android:padding="6dp" />

            </LinearLayout>

            <!-- Row 2: Rating + Availability -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="8dp">

                <Spinner
                    android:id="@+id/spinnerRating"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:entries="@array/rating_filter_options"
                    android:spinnerMode="dropdown"
                    android:padding="6dp" />

                <Spinner
                    android:id="@+id/spinnerAvailability"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:entries="@array/availability_filter_options"
                    android:spinnerMode="dropdown"
                    android:padding="6dp" />

            </LinearLayout>

            <!-- Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Beauty Professionals"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="124 results" />
            </LinearLayout>

            <!-- CARDS CONTAINER -->
            <LinearLayout
                android:id="@+id/cardsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- SARAH CARD -->
                <LinearLayout
                    android:id="@+id/cardSarah"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="#F2F2F2"
                    android:padding="12dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/imgSarah"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:src="@android:drawable/sym_def_app_icon"
                        android:layout_marginEnd="8dp"
                        android:contentDescription="Sarah Johnson profile"
                        android:clickable="true"
                        android:focusable="true"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sarah Johnson"
                            android:textStyle="bold"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hair Stylist &amp; Colorist" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="From $85" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="★ 4.9"
                        android:layout_marginEnd="10dp" />

                    <Button
                        android:id="@+id/btnBook1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Book" />
                </LinearLayout>

                <!-- MARIA CARD -->
                <LinearLayout
                    android:id="@+id/cardMaria"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="#F2F2F2"
                    android:padding="12dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/imgMaria"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:src="@android:drawable/sym_def_app_icon"
                        android:layout_marginEnd="8dp"
                        android:contentDescription="Maria Rodriguez profile"
                        android:clickable="true"
                        android:focusable="true"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Maria Rodriguez"
                            android:textStyle="bold"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nail Artist &amp; Manicurist" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="From $45" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="★ 4.8"
                        android:layout_marginEnd="10dp" />

                    <Button
                        android:id="@+id/btnBook2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Book" />
                </LinearLayout>

                <!-- EMILY CARD -->
                <LinearLayout
                    android:id="@+id/cardEmily"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="#F2F2F2"
                    android:padding="12dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/imgEmily"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:src="@android:drawable/sym_def_app_icon"
                        android:layout_marginEnd="8dp"
                        android:contentDescription="Emily Chen profile"
                        android:clickable="true"
                        android:focusable="true"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Emily Chen"
                            android:textStyle="bold"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Makeup Artist &amp; Brow" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="From $95" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="★ 5.0"
                        android:layout_marginEnd="10dp" />

                    <Button
                        android:id="@+id/btnBook3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Book" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>


    <include
        android:id="@+id/footer"
        layout="@layout/footer_client" />

</LinearLayout>
