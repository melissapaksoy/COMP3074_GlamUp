<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF3F8">

    <!-- HEADER -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Notifications"
        android:textSize="22sp"
        android:textStyle="bold"
        android:padding="20dp"
        android:textColor="#D81B60"
        android:gravity="center"
        android:background="#FFFFFF"
        android:elevation="4dp" />


    <!-- SCROLLABLE CONTENT -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Notification Item -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:background="#FFFFFF"
                android:elevation="3dp"
                android:layout_marginBottom="12dp"
                android:clipToOutline="true"
                android:backgroundTint="#FFFFFF"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/outline_circle_notifications_24"
                    android:layout_marginEnd="12dp"
                    app:tint="#D81B60" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your appointment with Maria Rodriguez is confirmed!"
                    android:textSize="15sp"
                    android:textColor="#444" />
            </LinearLayout>

            <!-- Another Notification -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:background="#FFFFFF"
                android:elevation="3dp"
                android:layout_marginBottom="12dp"
                android:clipToOutline="true"
                android:backgroundTint="#FFFFFF"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/outline_circle_notifications_24"
                    android:layout_marginEnd="12dp"
                    app:tint="#D81B60" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New availability times are posted for Emily Chen ðŸŽ‰"
                    android:textSize="15sp"
                    android:textColor="#444" />
            </LinearLayout>

            <!-- Another notification (dummy) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:background="#FFFFFF"
                android:elevation="3dp"
                android:layout_marginBottom="12dp"
                android:clipToOutline="true"
                android:backgroundTint="#FFFFFF"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/outline_circle_notifications_24"
                    android:layout_marginEnd="12dp"
                    app:tint="#D81B60" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="You have new messages from your beauty professionals ðŸ’Œ"
                    android:textSize="15sp"
                    android:textColor="#444" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- FIXED FOOTER -->
    <include
        android:id="@+id/footer"
        layout="@layout/footer_client" />

</LinearLayout>
